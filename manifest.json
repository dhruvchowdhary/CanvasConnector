{
  "manifest_version": 3,
  "name": "Canvas Classmate Finder",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://bcourses.berkeley.edu/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://bcourses.berkeley.edu/*"]
}
